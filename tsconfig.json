{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "jsx": "react",

    "module": "esnext",
    "declaration": true,

    "outDir": "./dist",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
